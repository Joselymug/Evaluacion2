<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaGestionTareas.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaGestionTareas.MVC.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: #99E6D8 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SistemaGestionTareas.MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>




                        <ul class="navbar-nav">

                        <li class="nav-item">
                                <a href="@Url.Action("Index", "Proyectos")" class="btn btn-sm btn-outline-primary">
                                    PROYECTOS
                                </a>
                        </li>

                        <li class="nav-item">
                                <a href="@Url.Action("Index", "Tareas")" class="btn btn-sm btn-outline-primary">
                                    TAREAS
                                </a>
                        </li>
                        <li class="nav-item">
                                <a href="@Url.Action("Index", "Usuarios")" class="btn btn-sm btn-outline-primary">
                                   USUARIOS
                                </a>
                        </li>
                        </ul>
                        <ul class="navbar-nav">
                            <!-- Si el usuario  está autenticado, muestra el nombre y botón de cierre de sesión, si no muestra los botones de register y login -->
                            @if (!User.Identity.IsAuthenticated)
                            {

                                <!-- Enlace para "Registrarse" -->
                                <a href="@Url.Action("Register", "Account")" class="btn btn-sm btn-outline-primary">
                                    Registrarse
                                </a>
                                <!-- Enlace para "Iniciar sesión" -->
                                <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-outline-success">
                                    Iniciar sesión
                                </a>
                            }
                            else
                            {
                                <li class="nav-item"><span class="nav-link">@User.Identity.Name</span> Bienvenido</li>
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="nav-link btn btn-link">Cerrar sesión</button>
                                    </form>
                                </li>
                                @*  <li class="nav-item"><span class="nav-link">@User.Identity.Name</span></li> *@
                                @*  
                                <a href="@Url.Action("Logout", "Account")" class="btn btn-sm btn-outline-primary"> Cerrar sesion</a>
 *@



                            }
                        </ul>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SistemaGestionTareas.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
