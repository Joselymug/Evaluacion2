@model IEnumerable<SistemaGestionTareas.Tarea>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Tareas</h1>
<div class="container mt-4">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.FechaLimite)</th>
                <th>@Html.DisplayNameFor(model => model.Prioridad)</th>
                <th>@Html.DisplayNameFor(model => model.ProyectoId)</th>
                <th>@Html.DisplayNameFor(model => model.UsuarioId)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaLimite)</td>
                    <td>@Html.DisplayFor(modelItem => item.Prioridad)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProyectoId)</td>
                    <td>@Html.DisplayFor(modelItem => item.UsuarioId)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Tareas", new { id = item.Id })" class="btn btn-sm btn-warning">Edit</a> |
                        <a href="@Url.Action("Details", "Tareas", new { id = item.Id })" class="btn btn-sm btn-info">Details</a> |
                        <a href="@Url.Action("Delete", "Tareas", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
